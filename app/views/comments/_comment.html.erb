<div class="comment-item">
	<div class="comment-user-container">
		<div class="comment-user-name center">
			<% if current_user == comment.user %>
				<%= link_to profile_path do %>
					<%=  gravatar_for(comment.user, :xsmall) %>
					<h3><a class="hover-pointer">you</a></h3>
				<% end %>
			<% else %>
				<%= link_to comment.user do %>
					<%=  gravatar_for(comment.user, :xsmall) %>
					<h3><a class="hover-pointer"><%= comment.user.username %></a></h3>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="comment-content-and-time">
		<div class="comment-content">
			<%= comment.content %>
		</div>
		<div class="comment-time">
			<%= time_ago_in_words(comment.created_at) %> ago
		</div>
	</div>
	<% if comment.user == current_user %>
		<div class="delete-comment">
			<%= link_to "&times;".html_safe, comment, 
					:method => "delete", 
					:confirm => "Are you sure you want to delete your comment?",
					:class => "no-underline" 
			%>
		</div>
	<% end %>
	<div class="clear"></div>
</div>